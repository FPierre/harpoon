<div class="container-fluid">
  <div class="row">
    <div class="col-sm-12">
      <div class="actions-wrapper">
        <%= render 'actions' %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-12">
      <div class="list-group">
        <%= render @articles || 'There are no articles available.' %>
      </div>
    </div>
  </div>

  <div class="">
    <button type="button" class="btn btn-primary"><i class="large material-icons">keyboard_arrow_up</i></button>
  </div>
</div>

<div id="article-actions-modal" class="modal">
  <div class="modal-content">
    <h4></h4>
    <p></p>
  </div>

  <div class="modal-footer">
    <a href="" class="delete modal-action modal-close waves-effect waves-green btn-flat">
      <i class="material-icons left">delete</i>Delete
    </a>
    <a href="" class="keep modal-action modal-close waves-effect waves-green btn-flat">
      <i class="material-icons left">grade</i>Keep
    </a>
    <a href="" class="read-later modal-action modal-close waves-effect waves-green btn-flat">
      <i class="material-icons right">schedule</i>Read later
    </a>
  </div>
</div>
